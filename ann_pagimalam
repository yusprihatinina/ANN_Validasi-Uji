                net.layers{1}.transferFcn = 'tansig';
                net.layers{2}.transferFcn = 'softmax';
                net.divideParam.trainRatio = 0.8;
                net.divideParam.valRatio = 0.2;
                net.divideParam.testRatio = 0;
