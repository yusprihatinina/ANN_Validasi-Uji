                net.trainParam.epochs = 1000;
                net.trainParam.max_fail = 6;
                net.divideFcn = 'dividetrain';
                net.trainParam.showWindow = false;
                
                net = train(net, X', Y);
                pred = net(X');
                [~, pred_class] = max(pred);
                acc = sum(pred_class' == y) / numel(y);
                
                fprintf('â†’ Neuron=%d, LR=%.2f, Acc=%.2f%%\n', h, lr, acc * 100);
                
                if acc > best_acc
                    best_acc = acc;
                    best_net = net;
                end
            catch ME
                fprintf('âŒ Error dengan Neuron=%d, LR=%.2f: %s\n', h, lr, ME.message);
            end
        end
    end
end


